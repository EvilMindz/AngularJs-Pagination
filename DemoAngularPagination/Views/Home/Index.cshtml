@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="ProductsArchiveCtrl">

    <div class="row" ng-hide="isSearching">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in Data.Items" data-id="{{item.Id}}">
                    <td>{{item.Id}}</td>
                    <td>{{item.Name}}</td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <demo-pager is-searching="isSearching" page="page" pages-count="pagesCount"></demo-pager>
        </div>
    </div>

    <div ng-hide="!isSearching">
        <div class="progress progress-striped active">
            <div class="progress-bar" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
    
</div>